<html>
  <body>
    <div id="main-container" class="container-fluid">
      <div class="row">
        <div id="sidebar" class="col-xs-6">
          <p id= "logo"> Dude Overflow</p>
        </div>
        <div id="blanktopbar" class= "col-xs-3">
        </div>
        <div id="signup" class="col-xs-1">
          <p> <%= link_to 'Sign Up', new_user_path %> </p>
        </div>
        <div id="login" class="col-xs-1">
          <p> <%= link_to 'Login', login_path %> </p>
        </div>
        <div id="profile" class="col-xs-1">
          <p> Profile</p>
        </div>
      </div>
      <% Question.all.each do |question| %>
        <div id="articlebar" class="row">
          <div id="votes-holder" class="col-xs-1">
            <div class="row">
              <div id="votecountlabel" class= "col-xs-1">
                <p> 0 </p>
              </div>
            </div>
            <div class="row">
              <div id="votelabel" class= "col-xs-1">
                <p> votes </p>
              </div>
            </div>
          </div>
          <div id="answers-holder" class="col-xs-1">
            <div class="row">
              <div id="answercountlabel" class= "col-xs-1">
                <p> 0 </p>
              </div>
            </div>
            <div class="row">
              <div id="answerlabel" class= "col-xs-1">
                <p> answer </p>
              </div>
            </div>
          </div>
          <div id="views-holder" class="col-xs-1">
            <div class="row">
              <div id="viewscountlabel" class= "col-xs-1">
                <p> 0 </p>
              </div>
            </div>
            <div class="row">
              <div id="viewslabel" class= "col-xs-1">
                <p> views </p>
              </div>
            </div>
          </div>
          <div id="question-holder" class="col-xs-9">
            <div class="row">
              <div id="question-title" class= "col-xs-12">
                <p> <%= question.title %></p>
              </div>
            </div>
            <div class="row">
              <div id="tags-list" class= "col-xs-6">
                <p> tags </p>
              </div>
              <div id="authorlabel" class= "col-xs-6">
                <p> <%= question.user.username %> </p>
              </div>
            </div>
          </div>
          </div>
        </div>
      <% end %>
    </div>
  </body>
</html>

