<%= link_to "Home", root_path %>
<div class="container-fluid">
    <div class="row">
      <div class="col-xs-2">
      </div>
      <div class="col-xs-9">
        <h2> <%= @question.title %> <h2>
      </div>
    </div>
      <div class="row">
        <div class = "col-xs-1">
        </div>
        <div class="col-xs-1">
          <% if logged_in? %>
            <%= render partial: "votes/question_vote", locals: {question: @question, voteable_type: "Question", voteable_id: @question.id, vote_count: @question.vote_count } %>
          <% else %>
            <h3><%= @question.vote_count %></h3>
          <% end %>
        </div>
        <div class="col-xs-8">
          <div class = "jumbotron smaller-jumbotron">
            <p id= 'smaller-paragraph'> <%= @question.body %> </p>
          </div>
        </div>
        <div class="col-xs-2">
      </div>
    </div>
  <div class="row">
    <div class= "col-xs-1">
    </div>
    <div class = "comments col-xs-8">
    <% if @question.comments %>
      <% @question.comments.each do |c| %>
         <p> <%= c.body %> :<%= c.user.username %> </p>
      <% end %>
    <% end %>
    </div>
    <div class = "comment-form-thing col-xs-3">
    <% if logged_in? %>
      <%= render 'comments/question_comment', question: @question %>
    <% end %>
    </div>
  </div>
  <div class = "row">
    <div class= "col-xs-12" >
      <% if logged_in? %>
        <%= render 'answers/form', answer: @answer %>
      <% end %>
    </div>
  </div>
    <% if @question.answers %>
      <% @question.answers.each do |a| %>
        <%= render 'answers/show', answer: a %>
        <div class = "row">
          <div class = "col-xs-8">
            <% if a.comments %>
              <% a.comments.each do |c| %>
            <p><%= c.body %></p>
            <% end %>
          </div>
          <div class = "col-xs-4">
            <%= render 'comments/answer_comment', answer: a %>
          </div>
        </div>
        <% end %>
      <% end %>
    <% end %>
</div>


