<% if logged_in? %>
  <%= render partial: "votes/show", locals: {question: @question, voteable_type: "Question", voteable_id: @question.id, vote_count: @question.vote_count } %>
<% end %>
<%= @question.title %><br>
<%= @question.body %>


<%= render 'comments/question_comment', question: @question %>
<h2>Question Comments</h2>
<div id="question_comments"></div>
<% if @question.comments %>
  <% @question.comments.each do |c| %>
    <%= c.body %><br>
  <% end %>
<% end %>

<%= render 'answers/form', answer: @answer  %>

<% if @question.answers %>
  <% @question.answers.each do |a| %>
    <%= render 'answers/show', answer: a %>
    <h2>Answer Comments</h2>
    <% if a.comments %>
      <% a.comments.each do |c| %>
        <%= c.body %><br>
      <% end %>
    <% end %>
  <% end %>
<% end %>