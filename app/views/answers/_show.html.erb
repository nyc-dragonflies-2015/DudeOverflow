<div class= "row">
  <div class = "col-xs-1" >
  </div>
  <div class = "col-xs-1">
    <% if logged_in? %>
      <%= render partial: "votes/answer_vote", locals: {answer: answer, voteable_type: "Answer", voteable_id: answer.id, vote_count: answer.vote_count } %>
    <% else  %>
      <h3><%= answer.vote_count %></h3>
    <% end %>
  </div>
  <div class = "col-xs-8">
    <div class = "jumbotron">
      <p id= "answer-text"><%= answer.body %></p>
    </div>
  </div>
  <div class = "col-xs-2">
  </div>
</div>

