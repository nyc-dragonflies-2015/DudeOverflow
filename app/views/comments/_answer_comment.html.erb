<%= form_for @comment, url: comments_path, :html => {class: 'answer-comment-form', id: "comment-id-" + answer.id.to_s}, method: :post do |f| %>
  <%= f.text_field :body %>
  <%= f.hidden_field :commentable_type, value: "Answer" %>
  <%= f.hidden_field :commentable_id, value: answer.id %>
  <%= f.submit :"Submit Answer Comment", class: 'btn' %>
<% end %>
